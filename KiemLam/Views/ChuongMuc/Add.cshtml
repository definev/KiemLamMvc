@model MovieStoreMvc.Models.Domain.Chapters
@{
}

<form class="w-40" asp-action="Add" method="post">
    <h2 class="pb-10">Add chương mục</h2>
    <div class="input-container">
        <label asp-for="Title" class="w-40">Tên chương</label>
        <input type="text" class="input" asp-for="Title">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Title"> </span>
    </div>
    
    
    <div class="input-container">
        <label asp-for="Content" class="w-40">Nội dung</label>
        <input type="text" class="input" asp-for="Content">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Content"> </span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Save</button>
        <a class="btn btn-sec" href="/ChuongMuc/ChuongMucList">All records</a>
    </div>
</form>
