@model MovieStoreMvc.Models.Domain.DieuLuat
@{}
<form class="w-40" asp-action="Edit" method="post" enctype="multipart/form-data">
    <h2 class="pb-10">Update điều luật</h2>
        <input type="hidden" class="input" asp-for="Id">

    <div class="input-container">
        <label asp-for="Name" class="w-40">Title</label>
        <input type="text" class="input" asp-for="Name">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Name"> </span>
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ChuongMuc"> </span>
    </div>

    <div class="input-container">
        <label asp-for="ReleaseYear" class="w-40">Released Year</label>
        <input type="text" class="input" asp-for="ReleaseYear">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="ReleaseYear"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Content" class="w-40">Director</label>
        <input type="text" class="input" asp-for="Content">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Content"> </span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Save</button>
        <a class="btn btn-sec" href="/DieuLuat/DieuLuatList">All records</a>
    </div>
</form>
