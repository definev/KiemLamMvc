@model MovieStoreMvc.Models.DTO.DieuLuatListVm
@{
}

<div class="tbl-container">
    <h2>Điều luật</h2>

    <table>
        <tr>
            <th>Tên</th>
            <th>Chương mục</th>
            <th>Năm</th>
            <th>Nội dung</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model.MovieList)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.ChuongMucNames</td>
                <td>@item.ReleaseYear</td>
                <td>@item.Content</td>
                <td>
                    <a href="/DieuLuat/Edit?id=@item.Id" class="btn btn-default">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a onclick="return window.confirm('Are you sure?')" href="/DieuLuat/Delete?id=@item.Id" class="btn btn-danger">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
        }

    </table>
    <div class="input-container">
        <a href="/DieuLuat/Add" class="btn btn-sec">Back</a>
    </div>s
</div>